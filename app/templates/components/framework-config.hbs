<div id="myBody" style="padding-left: 35px">
    <div class="w3-twothird w3-container">
        <h1 class="w3-text-deep-orange">Configuration</h1>
        <div style="margin: 10px">
            <label style="padding-right: 55px">Embed WebRTC By Default</label> 
            {{input type='checkbox' checked=frameworkConfig.embedWebRTCByDefault}}
        </div>
        <div style="margin: 10px">
            <label style="padding-right: 75px">Dedicated Login Window</label>
            {{input type='checkbox' checked=frameworkConfig.dedicatedLoginWindow}}
        </div>
        <div style="margin: 10px">
            <label style="padding-right: 136px">Enable Call Logs</label>
            {{input type='checkbox' checked=frameworkConfig.enableCallLogs}}
        </div>
        <div style="margin: 10px">
            <label style="padding-right: 26px">Use PEF_SearchValue Attribute</label>
            {{input type='checkbox' checked=frameworkConfig.enablePEFSearchValue}}
        </div>
        <div style="margin: 10px">
            <label style="padding-right: 62px">Use PEF_URLPop Attribute</label>
            {{input type='checkbox' checked=frameworkConfig.enablePEFUrlPop}}
        </div>
        <div style="margin: 10px">
            <label style="padding-right: 70px">Genesys Cloud Region: </label>
            <select onchange={{action 'setRegion' value='target.value'}} name="pcRegion" id="pcRegion">
                <option hidden value="">{{frameworkConfig.genesysCloudRegion}}</option>
                {{#each regions as |region|}}
                    <option value={{region}}>{{region}}</option>
                {{/each}}
            </select>
        </div>

        <div style="margin: 10px">
            <label style="padding-right: 130px">Language: </label>
            <select onchange={{action 'setLanguage' value='target.value'}} name="userLanguage" id="userLanguage">
                <option hidden value="">{{frameworkConfig.userLanguage.display}}</option>
                {{#each languages as |language|}}
                    <option value={{language.code}}>{{language.language}}</option>
                {{/each}}
            </select>
        </div>
        <div style="margin: 10px">
            <label style="padding-right: 152px">Theme: </label>
            <select onchange={{action 'setTheme' value='target.value'}} name="theme" id="theme">
                <option hidden value="">{{frameworkConfig.theme.display}}</option>
                {{#each themes as |theme|}}
                    <option value={{theme.name}}>{{theme.name}}</option>
                {{/each}}
            </select>
        </div>
        <div style="margin-top: 20px">
            <button {{action "saveConfig"}}>Save Settings</button>
        </div>        
    </div>
</div>